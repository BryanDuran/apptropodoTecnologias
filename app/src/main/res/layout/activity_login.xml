<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".LoginActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="378dp"
        android:layout_height="685dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/fondo"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@drawable/fondo">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="378dp"
                android:layout_height="257dp"
                app:srcCompat="@drawable/uv" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Correo Institucional"
                android:textColor="#FAF7F7"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/correo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Ej. zS18043322@estudiantes.uv.mx"
                android:inputType="textPersonName"
                android:shadowColor="#F1EAEA"
                android:textColor="#EDE7E7"
                android:textColorHint="#80CCC7C7" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ContraseÃ±a"
                android:textColor="#F8F5F5"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/contrasena"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="********"
                android:inputType="textPassword"
                android:textColorHint="#7AACABAB" />

            <Button
                android:id="@+id/btn_ingresar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingresar"
                app:cornerRadius="50dp" />

            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#008989"
                android:text="registrarme"
                android:textSize="12sp"
                app:cornerRadius="50dp" />

            <Button
                android:id="@+id/btn_anonymous"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#203B8B"
                android:text="Visitante"
                android:textSize="12sp"
                app:cornerRadius="50dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>